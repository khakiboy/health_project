<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegesterPatientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ثبت نام بیمار" />

            <EditText
                android:id="@+id/newPatientFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="نام"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/newpatientLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="نام خانوادگی"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/inputpatientGender"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/input" />

            <Button
                android:id="@+id/inputpatientBirthDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:padding="5dp"
                android:text="انتخاب تاریخ تولد" />

            <EditText
                android:id="@+id/newpatientEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="ایمیل "
                android:inputType="textEmailAddress"
                android:padding="5dp" />

            <EditText
                android:id="@+id/newpatientPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="شماره تلفن"
                android:inputType="phone"
                android:padding="5dp"
                android:textAlignment="viewEnd" />

            <EditText
                android:id="@+id/newpatientAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="آدرس"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/newpatientUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/newpatientPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dp" />

            <EditText
                android:id="@+id/newpatientConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Enter your password again."
                android:inputType="textPassword"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="در صورت داشتن بیمه از لیست زیر انتخاب کنید." />

            <Spinner
                android:id="@+id/spinnerinsurence"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/input" />

            <CheckBox
                android:id="@+id/privacyagreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="شرایط و ضوابط ثبت نام در این برنامه را می دانم و می پذریم" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signin_bt_bg"
                android:text="ثبت نام" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>